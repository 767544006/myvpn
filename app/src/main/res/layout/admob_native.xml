<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#808080"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adflag"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:elevation="2dp"
            android:gravity="center"
            android:text="AD"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/con"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/media_view_container"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp" />

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignBottom="@id/media_view_container"
                android:layout_marginTop="15dp"
                android:background="#51333333"
                android:paddingVertical="5dp"

                >

                <ImageView
                    android:id="@+id/icon_image_view"
                    android:layout_width="45.5dp"
                    android:layout_height="45.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp" />

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/icon_image_view"
                    android:text="Node is temporarily unavailable"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/body_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_text_view"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/icon_image_view"
                    android:text="Node is temporarily unavailableNode is temporarily unavailable"
                    android:textColor="#ffd9d9d9"
                    android:textSize="12sp" />
            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/cta_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/con"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="7dp"
            android:background="#4d73ff"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>